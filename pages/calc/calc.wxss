/* pages/calc/calc.wxss */
page {
  background-color: #1C1512;
  color: #fff;
}
.pick {
  background-color: #342821;
}
.pick-view {
  float: left;
  padding-left: 30px;
}

.pick-img {
  float:right;
  padding-top:7px;
  padding-right: 30px;
}
.hori-view{
  display: flex;
  flex-flow:row;
}
.vert-view{
  display: flex;
  flex-flow:column;
}
.vert-line{
  background-color: #2F96AB;
  width:100px;
  height: 2px;
}
.pick-block {
  border-width:1px;
  width:100%;
  height:20px;
  border-style:solid;
  border-color: #A19894;
}